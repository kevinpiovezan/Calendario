<%- include('includes/head'); %>
  <%- include('includes/nav'); %>
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-3">
        <h1 class="text-center">Login</h1>
        <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
        <%- include('includes/messages'); %>
          <div class="row">
            <div class="col-lg">
              <h4>Crie sua conta</h4>
              <p>Se você ainda não tem conta, preencha seu formulário abaixo:</p>
              <form class="form-cadastro" method="POST" action="/login/register">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                  <label for="exampleInputEmail1">Seu melhor e-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Sua melhor senha</label>
                  <input type="password" placeholder="Coloque o Mouse para mais informações" title="A senha precisa ter entre 8 e 32 caracteres, incluindo letras maiúsculas, minusculás, símbolos e números!" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary my-3">Crie sua conta</button>
              </form>
            </div>
            <div class="col-lg">
              <h4>Faça login</h4>
              <p>Se você já possui conta, entre com seu e-mail e senha:</p>
              <form class="form-login" action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                  <label for="exampleInputEmail1">E-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary my-3">Login</button>
              </form>
            </div>
          </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
    <%- include('includes/footer'); %>
