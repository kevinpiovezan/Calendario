<%- include('includes/head'); %>
  <%- include('includes/nav'); %>
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-3">
        <h1 class="text-center">Olá <%= user.email %>
        </h1>
        <p class="text-center lead">Você precisa sair para criar um novo usuário.</p>
        <%- include('includes/messages'); %>

      </div>
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 align-center">
          <h4>Altere sua senha</h4>
          <form action="/login/editpassword" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>Senha:</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" disabled class="btn btn-primary my-3">Alterar Senha</button>
          </form>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
    </div>
